rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Deny students from writing to the correctAnswer field in any document.
    match /{path=**}/questions/{questionId} {
      allow write: if request.auth.token.role != 'student';
    }

    // Allow read and write access for all other authenticated users.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
